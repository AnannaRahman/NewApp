<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp">



        <com.joooonho.SelectableRoundedImageView

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_image"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:paddingRight="25dp"
            android:paddingTop="4dp"
            android:src="@drawable/store"
            android:scaleType="fitXY"
            app:sriv_left_top_corner_radius="16dip"
            app:sriv_right_top_corner_radius="16dip"
            app:sriv_left_bottom_corner_radius="16dip"
            app:sriv_right_bottom_corner_radius="16dip"

            app:sriv_border_width="2dip"
            app:sriv_border_color="@android:color/transparent"
             />
        <LinearLayout
            android:paddingLeft="10dp"
            android:id="@+id/lyTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_image"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_image"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:text="Title"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black" />

            <HorizontalScrollView
                android:id="@+id/hsv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fillViewport="true"
                android:measureAllChildren="false"
                android:scrollbars="none">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvSTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvDetails"
                        android:layout_toRightOf="@+id/iv_image"
                        android:inputType="text"
                        android:text="#New Trendings hash tag"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/tvDTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvDetails"
                        android:layout_toRightOf="@+id/iv_image"
                        android:inputType="text"
                        android:text="#New Trendings hash tag"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tvEndTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDetails"
                android:layout_toRightOf="@+id/iv_image"
                android:inputType="text"
                android:text="New Trendings"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <ImageView
                android:id="@+id/iv_Rating"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toLeftOf="@+id/tvRating"
                android:layout_toRightOf="@+id/tvTitle"
                android:src="@drawable/ic_star" />

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDetails"
                android:layout_gravity="left|end"
                android:layout_toRightOf="@+id/iv_image"
                android:inputType="text"
                android:text="4.5/4"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>


